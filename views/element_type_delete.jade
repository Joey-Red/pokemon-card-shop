
extends layout

block content

  h1 Delete Element Type: #{element_type.name}
  
  if element_type_cards.length
  
    p #[strong Delete the following cards before attempting to delete this element type.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Cards
    
      dl
      each card in element_type_cards
        dt 
          a(href=card.url) #{card.title}
        dd #{card.summary}

  else
    p Do you really want to delete this Element Type?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=element_type._id )

      button.btn.btn-primary(type='submit') Delete