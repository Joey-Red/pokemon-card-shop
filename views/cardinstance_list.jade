extends layout

block content
  h1= title

  ul
  each val in cardinstance_list
    li 
      a(href=val.url) #{val.card.title} : #{val.imprint} - 
      if val.status=='Available'
        span.text-success #{val.status}
      else if val.status=='Maintenance'
        span.text-danger #{val.status}
      else
        span.text-warning #{val.status} 

  else
    li There are no card copies in this shop.