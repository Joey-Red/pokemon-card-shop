
extends layout

block content

  h1= title
  
  p #[strong Do you really want to delete this Card Instance?]
  
  div(style="margin-left:20px")

    p #[strong ID]: #{cardinstance._id}
  
    p #[strong Title:] 
      a(href=cardinstance.card.url) #{cardinstance.card.title}
    
    p #[strong Status:] 
      if cardinstance.status=='Available'
        span.text-success #{cardinstance.status}
      else if cardinstance.status=='Maintenance'
        span.text-danger #{cardinstance.status}
      else
        span.text-warning #{cardinstance.status} 
      

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=cardinstance._id )

    button.btn.btn-primary(type='submit') Delete